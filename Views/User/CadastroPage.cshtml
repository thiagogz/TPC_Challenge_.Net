@{
    ViewData["Title"] = "Cadastro";
}

<div class="register-page" style="background-color:#0E1015">

    <div class="register-box" >

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Cadastre-se</p>

                <form asp-controller="User" asp-action="EfetuarCadastro" method="post">
                    <div class="input-group mb-3">
                        <input name="NomeUsuario" type="text" class="form-control" placeholder="Nome">
                    </div>
                    <div class="input-group mb-3">
                        <input name="SobrenomeUsuario" type="text" class="form-control" placeholder="Sobrenome">
                    </div>
                    <div class="input-group mb-3">
                        <input name="EmailUsuario" type="email" class="form-control" placeholder="E-mail">
                    </div>
                    <div class="input-group mb-3">
                        <input name="SenhaUsuario" type="password" class="form-control" placeholder="Senha">
                    </div>
                    <div class="input-group mb-3">
                        <input name="TelefoneUsuario" type="tel" class="form-control" placeholder="Telefone">
                    </div>
                    <div class="input-group mb-3">
                        <input name="EnderecoUsuario" type="text" class="form-control" placeholder="Endereço">
                    </div>
                    <div class="input-group mb-3">
                        <input name="NumeroEndereco" type="number" class="form-control" placeholder="Número">
                    </div>
                    <div class="input-group mb-3">
                        <input name="ComplementoEndereco" type="text" class="form-control" placeholder="Complemento">
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                        </div>
                    </div>
                </form>
                <a asp-controller="User" asp-action="LoginPage" class="text-center">Já tenho cadastro</a>
            </div>
        </div>
    </div>
</div>